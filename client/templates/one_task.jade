template(name='oneTask')
  div.container-fluid
    div.row
      +functionalArea
      +oneTaskContent

template(name='oneTaskContent')
  div.col-md-offset-3.col-md-9.one-task-content
    div.page-header
      h1 任务详情
    div.panel.panel-primary
      div.panel-heading {{ task.title }}
      div.panel-body
        div.row
          div.col-md-1
            p
              strong 类别
          div.col-md-11
            p {{ task.type }}

          div.col-md-1
            p 
              strong 描述
          div.col-md-11
            p {{ task.description }}

          div.col-md-1 
            p 
              strong 截止
          div.col-md-11
            p {{ task.deadline }}

          div.col-md-1 
            p 
              strong 酬劳
          div.col-md-11
            p {{ task.reward }}

          div.col-md-1 
            p 
              strong 申请人
          div.col-md-11
            p {{ task.applicants }}
    div
      p
        strong 申请理由
    div.editor
      textarea.form-control(id="edit" name="content")

    div
      button.btn.btn-primary.pull-right 申请

