template(name='publishTask')
  div.container-fluid
    div.row
      +functionalArea

      div.col-md-offset-3.col-md-9
        div.page-header
          h1 发布任务
        div(class="form-horizontal")
          div(class="form-group")
            label(for="inputEmail3" class="col-sm-1 control-label") 标题
            div(class="col-sm-10")
              input(type="email" class="form-control" id="inputEmail3" placeholder="标题")

          div.form-group
            label.col-sm-1.control-label 类别
            div.col-sm-10
              div.btn-group(data-toggle="buttons")
                label.btn.btn-primary
                  input(type="radio" name="options" id="option2" autocomplete="off")
                  | 学习

                label.btn.btn-primary
                  input(type="radio" name="options" id="option3" autocomplete="off")
                  | 生活

                label.btn.btn-primary
                  input(type="radio" name="options" id="option4" autocomplete="off")
                  | 娱乐

                label.btn.btn-primary
                  input(type="radio" name="options" id="option5" autocomplete="off")
                  | 其他

          div(class="form-group")
            label(for="inputPassword3" class="col-sm-1 control-label") 描述
            div(class="col-sm-10")
              textarea.form-control(id="edit" name="content")

          div(class="form-group")
            label(for="inputEmail3" class="col-sm-1 control-label") 报酬
            div(class="col-sm-10")
              input(type="email" class="form-control" id="inputEmail3" placeholder="报酬")

          div(class="form-group")
            div(class="col-sm-offset-10")
              button(class="btn btn-default") 确定
